<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/find_best_deposits"
        android:textColor="#F7F7F7"
        android:textSize="18sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="356dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:paddingStart="40dp">

        <ImageView
            android:id="@+id/jana"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center|top"
            android:background="@drawable/jana"
            android:contentDescription="@string/todo" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingTop="90dp"
            android:layout_width="wrap_content"
            android:id="@+id/l1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ta1"
                android:layout_width="184dp"
                android:layout_height="42dp"
                android:layout_marginStart="30dp"
                android:text="@string/_9"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/ta2"
                android:layout_width="184dp"
                android:layout_height="42dp"
                android:layout_marginStart="30dp"
                android:text="@string/rs_12_900"
                android:textColor="#000000" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingTop="80dp"
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/ta3"
                android:layout_width="184dp"
                android:layout_height="42dp"
                android:layout_marginStart="30dp"
                android:text="@string/interest_rate"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ta4"
                android:layout_width="184dp"
                android:layout_height="42dp"
                android:layout_marginStart="30dp"
                android:text="@string/total_amount"
                android:textSize="12sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <Button
            android:id="@+id/but_jana"
            android:layout_width="299dp"

            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="130dp"
            android:background="#4DC97408"
            android:text="@string/open_now"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginTop="175dp"
            android:id="@+id/link"
            android:text="@string/link" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="356dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:paddingStart="40dp">
        <ImageView
            android:id="@+id/bajaj"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center|top"
            android:background="@drawable/bajaj"
            android:contentDescription="@string/todo" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingTop="90dp"
            android:layout_width="wrap_content"
            android:id="@+id/l3"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tb1"
                android:layout_width="184dp"
                android:layout_height="42dp"
                android:layout_marginStart="30dp"
                android:text="@string/_8_6"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tb2"
                android:layout_width="184dp"
                android:layout_height="42dp"
                android:layout_marginStart="30dp"
                android:text="@string/rs_12_100"
                android:textColor="#000000" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingTop="80dp"
            android:id="@+id/l4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/tb3"
                android:layout_width="184dp"
                android:layout_height="42dp"
                android:layout_marginStart="30dp"
                android:text="@string/interest_rate"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tb4"
                android:layout_width="184dp"
                android:layout_height="42dp"
                android:layout_marginStart="30dp"
                android:text="@string/total_amount"
                android:textSize="12sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <Button
            android:id="@+id/but_bajaj"
            android:layout_width="299dp"

            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="130dp"
            android:background="#4DC97408"
            android:text="@string/open_now"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginTop="175dp"
            android:id="@+id/link1"
            android:text="@string/link" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="356dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:paddingStart="40dp">
        <ImageView
            android:id="@+id/mahindra"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center|top"
            android:background="@drawable/mahindra"
            android:contentDescription="@string/todo" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingTop="90dp"
            android:layout_width="wrap_content"
            android:id="@+id/l5"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tc1"
                android:layout_width="184dp"
                android:layout_height="42dp"
                android:layout_marginStart="30dp"
                android:text="@string/_8_1"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tc2"
                android:layout_width="184dp"
                android:layout_height="42dp"
                android:layout_marginStart="30dp"
                android:text="@string/rs_11_400"
                android:textColor="#000000" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:paddingTop="80dp"
            android:id="@+id/l6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/tc3"
                android:layout_width="184dp"
                android:layout_height="42dp"
                android:layout_marginStart="30dp"
                android:text="@string/interest_rate"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tc4"
                android:layout_width="184dp"
                android:layout_height="42dp"
                android:layout_marginStart="30dp"
                android:text="@string/total_amount"
                android:textSize="12sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <Button
            android:id="@+id/but_mahi"
            android:layout_width="299dp"

            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="130dp"
            android:background="#4DC97408"
            android:text="@string/open_now"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginTop="175dp"
            android:id="@+id/link2"
            android:text="@string/link" />
    </androidx.cardview.widget.CardView>

</LinearLayout>